<!-- Breadcrumb Begin -->
    <div class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__links">
                        <a href="/"><i class="fa fa-home"></i> Home</a>
                        <span>My Order</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
<section class="shop-cart spad " style="text-align: center;">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="shop__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th>Date</th>
                                <th>ADDRESS</th>
                                <th>Status</th>
                                <th>View product</th>
                                <th>Total Amount</th>
                                <th>Payment mode</th>
                                <th>Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each order}}
                            <tr>
                                <td>{{this.date}}</td>
                                <td>
                                    {{this.deliveryDitails.homeaddress}}<br>{{this.deliveryDitails.fullAddress}}<br>{{this.deliveryDitails.town}}<br>{{this.deliveryDitails.Country}}<br>{{this.deliveryDitails.pincode}}
                                </td>
                                <td>{{this.status}}</td>
                                {{#if this.cancelled}}
                                <td><a class="btn btn-success disabled" href="/view-order/{{this._id}}">View product</a>
                                </td>
                                {{else if this.returned}}
                                <td><a class="btn btn-success disabled" href="/view-order/{{this._id}}">View product</a>
                                </td>
                                {{else}}
                                <td><a class="btn btn-warning" href="/ordered-products/{{this._id}}">View product</a>
                                </td>
                                {{/if}}
                                <td>â‚¹{{this.total}}</td>
                                <td>{{this.paymentMethod}}</td>
                                {{#if this.cancelled}}
                                <td style="color: red;">{{this.status}}</td>
                                {{else if this.delivered}}
                                <td style="color: rgb(9, 194, 15);">{{this.status}}</td>
                                <td><a class="btn btn-warning" href="/order-return/{{this._id}}">Return order</a></td>
                                {{else if this.returned}}
                                <td style="color: rgb(117, 128, 0);">{{this.status}}</td>
                                {{else}}
                                <td><a class="btn btn-danger" href="/cancel-Order/{{this._id}}"
                                        onclick="return confirm('Are you sure  {{this.Name}} ?')">Cancel order</a></td>
                                {{/if}}
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-3">
                <div class="cart__btn">
                    <a href="/">Continue Shopping</a>
                </div>
            </div>
            <div class="col-md-3">
            </div>
        </div>
    </div>
</section>
