<!-- close vise cart -->

<script>
    function setHIde(quantity, index) {
        if (quantity == 1) {
            mb[index].style.visibility = "hidden";

        }

    }
    let mb = document.querySelectorAll('.minus')
    let quantityArr = document.querySelectorAll('.adva')
    function loop() {
        for (var i = 0; i < quantityArr.length; i++) {
            setHIde(Number(quantityArr[i].innerHTML), i)
        }
    }
    loop()

    function changeQuantity(cartId, proId, count) {

        let quantity = parseInt(document.getElementById(proId).innerHTML)
        $.ajax({
            url: '/change-product-quantity',
            data: {

                cart: cartId,
                product: proId,
                count: count,
                quantity: quantity

            },
            method: 'patch',
            success: (response) => {
                console.log(response,'is the response')
                if (response.status) {

                  location.reload()
                    hide()


                } else if (response.noStock) {
                    Swal.fire({
                        icon: "error",
                        title: "Oops..!",
                        text: "Out Of Stock!",
                        showConfirmButton: false,
                        timer: 1000,
                    });
                } else if (response.maxLimitStock) {
                    Swal.fire({
                        icon: "warning",
                        title: "Oops..!",
                        text: "Limit is Reached!",
                        showConfirmButton: false,
                        timer: 1000,
                    });
                } else {
                    document.getElementById(proId).innerHTML = quantity + count
                    document.getElementById('total').innerHTML = response.total
                    document.getElementById('subtotal' + proId).innerHTML = response.cartSubTotal
                    hide()
                }
            }



        })
        function hide() {
            let quantity = parseInt(document.getElementById('span' + proId).innerHTML)
            setHIde(quantity)
            console.log(quantity)
        }

        function setHIde(quantity) {
            if (quantity == 1) {
                document.getElementById('neg-btn' + proId).style.visibility = "hidden";

            } else {

                document.getElementById('neg-btn' + proId).style.visibility = "visible";
            }
        }
    }

</script>


<script>
    function removeCart(proId) {
        swal({
            title: "Are you sure?",
            text: "Once deleted, you will not be able to recover this Product!",
            icon: "warning",
            buttons: true,
            dangerMode: true,
        })
            .then((willDelete) => {
                if (willDelete) {
                    $.ajax({
                        url: '/removefromcart/' + proId,
                        method: 'get',
                        success: (response) => {
                            if (response.status) {
                                //location.reload()
                                let count = $('#cart-count').html()
                                count = parseInt(count) - 1
                                $("#cart-count").html(count)
                                location.reload()
                            }
                        }
                    })
                    swal("Poof! Your imaginary file has been deleted!", {
                        icon: "success",
                    });
                } else {
                    swal("Your imaginary file is safe!");
                }
            });
    }

</script>